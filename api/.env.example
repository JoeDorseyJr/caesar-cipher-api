# Server Configuration
# Port for the HTTP server (default: 3000)
PORT=3000

# Database Configuration
# PostgreSQL connection string for authentication
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/caesar_cipher

# Authentication
# Secret key for JWT token signing (minimum 10 characters)
# IMPORTANT: Change this in production!
JWT_SECRET=your-secret-key-change-in-production

# Environment
# Application environment: development, production, or test (default: development)
NODE_ENV=development
