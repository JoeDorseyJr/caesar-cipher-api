{
  "name": "caesar-cipher-api",
  "version": "1.0.0",
  "description": "Caesar Cipher API built with Bun and Hono",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "start": "bun run dist/server.js",
    "test": "bun test",
    "migrate": "bun run db/migrate.ts",
    "seed:local": "bun run db/seed.ts",
    "benchmark": "bun run scripts/benchmark.ts",
    "doc:generate": "bun run scripts/generate-openapi.ts",
    "doc:check": "bun run doc:generate && test -f openapi.json && echo 'âœ… OpenAPI spec valid'",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "ci": "bash scripts/ci.sh"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.0.0",
    "pg": "^8.16.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.0.0",
    "@types/pg": "^8.15.5"
  }
}
